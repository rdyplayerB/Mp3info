{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/main.ts", "src/preload.ts"]
} 